{
  "name": "cx-hack",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/connectivity": "^2.11.0",
    "@sap-cloud-sdk/http-client": "^2.11.0",
    "@sap/cds": "^6.7.0",
    "@sap/xssec": "^3",
    "express": "^4",
    "express-session": "^1.17.3",
    "hdb": "^0.19.0",
    "passport": "^0",
    "es6-promise": "3.2.1"
  },
  "engines": {
    "node": "^18.7"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "devDependencies": {
    "sqlite3": "^5"
  },
  "type": "module",
  "scripts": {
    "start": "cds run"
  },
  "cds": {
    "requires": {
      "lead": {
        "kind": "odata-v2",
        "model": "./srv/external/lead",
        "credentials": {
          "path": "/v1/lead/",
          "destination": "c4c-basic"
        }
      },
      "db": {
        "kind": "sql"
      },
      "[production]": {
        "db": {
          "kind": "hana-cloud"
        }
      }
    }
  }
}
